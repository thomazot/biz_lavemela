
@media media-min-lg
    .catalog-category-view
        .main
            display: block

        .col-left
            z-index: 30
            max-width: none

    .filters
        position: relative
        display: flex
        align-items: center

        > .title
            flex: 0 0 auto
            margin: 0

        &__list
            display: flex
            flex: 1
            justify-content: flex-start
            min-width: 0

        &__filter
            position: relative
            margin: 0
            cursor: pointer

            > .filters__swatches, > .ul--0
                position: absolute
                top: 100%
                left: 0
                visibility: hidden
                padding: 16px
                min-width: 200px
                width: 100%
                background: #fff
                box-shadow: 0 0 10px rgba(0, 0, 0, .1)
                opacity: 0

            &:hover
                > .filters__swatches, > .ul--0
                    visibility: visible
                    opacity: 1
