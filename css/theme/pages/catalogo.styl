.category-title, .search-title
    h1
        text-transform: uppercase
        letter-spacing: 2px
        font-weight: bold
        font-size: 24px

.category-image
    overflow: hidden
    width: 100%

    img
        width: 100%
        object-fit: cover

.catalog-category-view, .catalogsearch-result-index
    @media media-min-lg
        .col-left
            margin-top: -16px
            margin-bottom: 20px

        .col-main
            display: grid
            grid-template: 'title toolbar' 'list list'

            .page-title
                grid-area: title

            .toolbar
                margin-left: auto
                grid-area: toolbar

            .category__products
                grid-area: list

    .breadcrumb
        margin-bottom: 32px

    .main-container
        max-width: none
        width: 100%

    .main
        margin: 0

    .col-main
        container()
