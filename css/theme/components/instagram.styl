.instagram
    &__title
        text-align: center
        font-weight: bold
        font-size: 24px

    &__description
        text-align: center
        font-weight: bold
        font-size: 15px
        opacity: .6

    &__header
        padding: 25px 0

    &__list
        display: grid
        overflow: hidden
        width: 100%
        grid-template-areas: 'item1 item2 item4 item5' 'item1 item3 item4 item6'
        grid-template-columns: 2fr 1fr 2fr 1fr

        @media media-max-sm
            grid-template-areas: 'item1 item2' 'item1 item3' 'item4 item5' 'item4 item6'
            grid-template-columns: 2fr 1fr

        .label
            position: absolute
            top: 0
            left: 0
            display: flex
            flex-flow: column nowrap
            justify-content: center
            align-items: center
            width: 100%
            height: 100%
            background: rgba(0, 0, 0, .5)
            color: #fff
            font-weight: bold
            font-size: 15px
            opacity: 0
            transition: all .2s ease-in-out

        .text
            display: block
            margin-top: 20px
            text-align: center

        .ico
            width: 18px
            height: 18px

        img
            width: 100%
            height: 100%
            object-fit: cover

        a
            position: relative

            &:hover
                .label
                    opacity: 1

            &:nth-child(1)
                grid-area: item1

            &:nth-child(2)
                grid-area: item2

            &:nth-child(3)
                grid-area: item3

            &:nth-child(4)
                grid-area: item4

            &:nth-child(5)
                grid-area: item5

            &:nth-child(6)
                grid-area: item6