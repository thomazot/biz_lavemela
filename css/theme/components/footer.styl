.footer
    padding-bottom: 100px

    @media media-max-lg
        text-align: center

        .flex--a-center
            justify-content: center

    &__logo
        margin: 0 auto

        .logo
            padding: 30px 0

            img, svg
                margin: 0 auto
                height: 40px

    &__content
        + .footer__title
            margin-top: gap

    &__title
        padding-bottom: 25px
        font-weight: semi-bold
        font-size: 16px

    &__box
        padding: (gap / 2)

        @media media-min-lg
            flex: 0 1 250px
            min-width: 0

    &__row
        margin: -(gap / 2)

        @media media-min-lg
            display: flex
            justify-content: space-between

    &__copyright
        flex: 1
        justify-content: center
        padding: 50px 0 0
        min-width: 0
        color: var(--primary)
        text-align: center
        font-size: 12px
        opacity: .6