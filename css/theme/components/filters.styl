.filters
    &__swatches
        .li--0
            max-width: none

    @media media-min-lg
        shadowBorder()
        container()

        margin-bottom: 50px
        background: #f3f3f3

        > .title
            font-weight: medium
            font-size: 20px

            &:after
                content: ':'

        &__name
            display: flex
            justify-content: flex-start
            align-items: center
            margin: 0
            color: var(--primary)
            font-weight: medium
            font-size: 16px

            &:after
                margin-top: -2px
                margin-left: 5px
                content: url(select)

        &__filter
            padding: 30px 16px
            background: none
            box-shadow: none

            &:hover
                box-shadow: none
