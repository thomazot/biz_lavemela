.products-tabs
    margin: 50px 0 0
    padding-bottom: 50px

    &__title
        text-align: center
        font-weight: bold
        font-size: 24px

    &__main
        position: relative

        @media media-min-lg
            display: flex
            flex-flow: row wrap
            justify-content: center
            margin-right: auto
            margin-left: auto
            max-width: calc(100% - 100px)

    &__footer
        padding-top: 75px
        text-align: center

    &__link
        color: #aaaaaa
        text-transform: uppercase
        font-weight: bold
        font-size: 14px

    .products
        @media media-min-lg
            display: contents

        &__title
            color: var(--secundary)
            font-size: 15px

            @media media-min-lg
                order: 0
                padding: 25px

        &__list
            @media media-min-lg
                flex: 0 0 100%
                order: 1
                min-width: 0

    .products:not(.on)
        .products
            &__list
                position: absolute
                visibility: hidden
                width: 100%

            &__title
                color: var(--primary)
                opacity: .6
